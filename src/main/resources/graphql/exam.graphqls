extend type Query {
    exams: [Exam!]!
    examById(id: String!): Exam!
    openedExams: [Exam!]!
}

extend type Mutation {
    "Create exam"
    createExam(input: CreateExamInput!): Exam
    "Update exam"
    updateExam(input: UpdateExamInput!): Exam!
    "Delete exam"
    deleteExam(id: String!): Boolean!
    "Begin exam"
    beginExam(id: String!): ExamSubmission!
}

#######
#Exams#
#######

type Exam {
    id: ID!
    title: String!
    author: User!
    accessibleFrom: String!
    accessibleTo: String!
    timeLimit: Int!
    assignments: [Assignment!]!
    classrooms: [Classroom!]!
}

input CreateExamInput {
    title: String!
    accessibleFrom: String!
    accessibleTo: String!
    timeLimit: Int!
    assignmentIds: [ID!]!
    classroomIds: [ID!]!
}

input UpdateExamInput {
    id: ID!
    title: String!
    accessibleFrom: String!
    accessibleTo: String!
    timeLimit: Int!
    assignmentIds: [ID!]!
    classroomIds: [ID!]!
}

