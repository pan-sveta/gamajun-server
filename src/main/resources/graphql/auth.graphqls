extend type Query {
    roles: [Role!]!
    users: [User!]!
}

extend type Mutation {
    signUp(input: SignUpInput!): User!
}

input SignUpInput{
    username: String!
    email: String!
    password: String!
    name: String!
    surname: String!
    inviteCode: String!
}


type Role{
    name: String!
}

type User{
    username: String!
    name: String!
    surname: String!
    email: String!
    roles: [Role!]!
}